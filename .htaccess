# Empêcher l'accès aux dossiers sensibles
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protéger les dossiers
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(app|core|vendor) - [F,L]
</IfModule>

# Désactiver l'index des répertoires
Options -Indexes

# Rediriger tout vers le dossier public
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>